
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <form class="form col-xs-6" action="#" onsubmit="false">
            <div class="form-group">
                User name: <label id="userInput"> </label>
            </div>
            <div class="form-group">
                Message: <input type="text" id="messageInput" class="form-control" />
            </div>
            <input type="button" id="sendButton" value="Send Message" class="btn btn-success" />
        </form>
    </div>

    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/lib/signalr/signalr.js"></script>
<script src="~/js/chat.js"></script>


